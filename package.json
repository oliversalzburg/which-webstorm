{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "which-webstorm",
  "version": "4.0.2",
  "description": "Find WebStorm binary",
  "license": "MIT",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliversalzburg/which-webstorm.git"
  },
  "type": "module",
  "main": "output/main.js",
  "bin": {
    "which-webstorm": "bin/bin.js",
    "wstorm": "bin/webstorm.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./output",
    "lint": "yarn run lint:all",
    "lint:all": "yarn run lint:eslint && yarn run lint:prettier && yarn run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "npm:publish": "npm publish",
    "npm:publish:major": "npm version major && npm publish",
    "npm:publish:minor": "npm version minor && npm publish",
    "npm:publish:patch": "npm version patch && npm publish",
    "test": "yarn build && node $(yarn bin mocha) output/*.test.js",
    "test:coverage": "tsc && c8 --reporter=html-spa node $(yarn bin mocha) output/*.test.js"
  },
  "types": "output/main.d.ts",
  "dependencies": {
    "@oliversalzburg/js-utils": "0.0.30",
    "execa": "9.1.0",
    "semver": "7.6.2",
    "which": "4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.3.0",
    "@types/chai": "4.3.16",
    "@types/eslint": "8.56.10",
    "@types/mocha": "10.0.6",
    "@types/mock-fs": "4.13.4",
    "@types/node": "20.12.12",
    "@types/semver": "7.5.8",
    "@types/which": "3.0.3",
    "c8": "9.1.0",
    "chai": "5.1.1",
    "eslint": "8.57.0",
    "globals": "15.3.0",
    "lint-staged": "15.2.5",
    "mocha": "10.4.0",
    "mock-fs": "5.2.0",
    "prettier": "3.2.5",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "typescript": "5.4.5",
    "typescript-eslint": "7.10.0"
  },
  "keywords": [
    "webstorm"
  ],
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "packageManager": "yarn@4.2.2"
}
