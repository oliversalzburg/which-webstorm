{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "which-webstorm",
  "version": "4.1.6",
  "description": "Find WebStorm binary",
  "license": "MIT",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliversalzburg/which-webstorm.git"
  },
  "type": "module",
  "main": "output/main.js",
  "bin": {
    "which-webstorm": "bin/bin.js",
    "wstorm": "bin/webstorm.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./output",
    "lint": "yarn run lint:all",
    "lint:all": "yarn run lint:biome && yarn run lint:tsc",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "nextversion": "./.scripts/manifest-version.cjs",
    "test": "yarn build && node $(yarn bin mocha) output/*.test.js",
    "test:coverage": "tsc && c8 --reporter=html-spa node $(yarn bin mocha) output/*.test.js",
    "preversion": "yarn run lint && yarn run build && yarn run test",
    "postversion": "git push"
  },
  "types": "output/main.d.ts",
  "dependencies": {
    "@oliversalzburg/js-utils": "0.2.8",
    "execa": "9.5.2",
    "semver": "7.7.1",
    "which": "5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/chai": "5.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.5",
    "@types/semver": "7.5.8",
    "@types/which": "3.0.4",
    "c8": "10.1.3",
    "chai": "5.1.2",
    "lint-staged": "15.3.0",
    "mocha": "11.0.1",
    "typescript": "5.7.2"
  },
  "keywords": [
    "webstorm"
  ],
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "packageManager": "yarn@4.6.0"
}
